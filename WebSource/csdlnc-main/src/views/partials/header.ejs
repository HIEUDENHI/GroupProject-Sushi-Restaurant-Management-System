<script>
    const searchInput = document.getElementById('search-input');
    const suggestionsBox = document.getElementById('suggestions');

    // Láº¯ng nghe sá»± kiá»‡n nháº­p vÃ o input tÃ¬m kiáº¿m
    searchInput.addEventListener('input', async () => {
        const query = searchInput.value.trim(); // Láº¥y ná»™i dung ngÆ°á»i dÃ¹ng nháº­p

        if (query.length > 0) {
            try {
                // Gá»­i request AJAX Ä‘áº¿n server Ä‘á»ƒ láº¥y gá»£i Ã½
                const response = await fetch(`/search?q=${encodeURIComponent(query)}`, {
                    headers: { 'X-Requested-With': 'XMLHttpRequest' }
                });

                const suggestions = await response.json(); // Parse káº¿t quáº£ JSON tá»« server

                // Hiá»ƒn thá»‹ danh sÃ¡ch gá»£i Ã½
                suggestionsBox.style.display = 'block';
                suggestionsBox.innerHTML = suggestions.map(dish => `
                    <div 
                        onclick="selectSuggestion('${dish.TenMon}')" 
                        style="padding: 10px; cursor: pointer; border-bottom: 1px solid #444;">
                        ${dish.TenMon} - ${dish.GiaTien.toFixed(2)} VND
                    </div>
                `).join('');
            } catch (error) {
                console.error('Lá»—i khi táº£i gá»£i Ã½:', error);
            }
        } else {
            // áº¨n danh sÃ¡ch gá»£i Ã½ náº¿u khÃ´ng cÃ³ ná»™i dung
            suggestionsBox.style.display = 'none';
            suggestionsBox.innerHTML = '';
        }
    });

    // HÃ m chá»n gá»£i Ã½ vÃ  gÃ¡n vÃ o Ã´ tÃ¬m kiáº¿m
    function selectSuggestion(name) {
        searchInput.value = name; // GÃ¡n tÃªn mÃ³n Äƒn Ä‘Æ°á»£c chá»n vÃ o Ã´ input
        suggestionsBox.style.display = 'none'; // áº¨n danh sÃ¡ch gá»£i Ã½
    }

    // áº¨n danh sÃ¡ch gá»£i Ã½ khi ngÆ°á»i dÃ¹ng click ra ngoÃ i
    document.addEventListener('click', (event) => {
        if (!suggestionsBox.contains(event.target) && event.target !== searchInput) {
            suggestionsBox.style.display = 'none';
        }
    });
</script>
